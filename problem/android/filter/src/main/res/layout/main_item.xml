<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="100dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_fav"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_image"
            android:src="@drawable/common_google_signin_btn_text_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_discount"
            android:drawableStart="@drawable/ic_baseline_content_cut_24"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            tools:text="30% Off!"
            android:textSize="16sp"
            android:layout_below="@id/iv_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_shape"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_item_name"
            tools:text="Test"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_below="@id/tv_item_discount"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_price"
            tools:text="89000"
            android:layout_below="@id/tv_item_name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_shop_loc"
            tools:text="ShopLoc"
            android:layout_below="@id/tv_item_price"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>